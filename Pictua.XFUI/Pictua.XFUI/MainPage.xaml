<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Pictua.XFUI.Views"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             x:Class="Pictua.XFUI.MainPage">

    <StackLayout>
        <Frame BackgroundColor="{DynamicResource NavigationBarColor}" CornerRadius="0">
            <Button Text="{x:Static fontawesome:FontAwesomeIcons.ArrowLeft}" FontFamily="{StaticResource FontAwesomeRegular}" HorizontalOptions="Start" TextColor="{DynamicResource SecondaryColor}" Padding="0" Clicked="BackButtonClicked" />
        </Frame>
        <views:Gallery/>
    </StackLayout>
    
</ContentPage>
