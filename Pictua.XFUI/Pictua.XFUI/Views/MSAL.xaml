<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pictua.XFUI.Views.MSAL">
    <ContentView.Content>
        <StackLayout Background="Azure">
            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <Button x:Name="CallGraphButton" Text="Call Microsoft Graph API" HorizontalOptions="End" Padding="5" Click="CallGraphButton_Click" Margin="5" FontFamily="Segoe Ui"/>
                <Button x:Name="SignOutButton" Text="Sign-Out" HorizontalOptions="End" Padding="5" Clicked="SignOutButton_Click" Margin="5" IsVisible="False" FontFamily="Segoe Ui"/>
            </StackLayout>
            <Label  Text="API Call Results" Margin="2,0,0,-5" FontFamily="Segoe Ui" />
            <Entry  x:Name="ResultText" MinimumHeightRequest="120" Margin="5" FontFamily="Segoe Ui"/>
            <Label  Text="Token Info" Margin="2,0,0,-5" FontFamily="Segoe Ui" />
            <Entry  x:Name="TokenInfoText" MinimumHeightRequest="70" Margin="5" FontFamily="Segoe Ui"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>